<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_50"
    android:id="@+id/activity_sensor_wifi"
    tools:context=".ui.fragment.StoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp"
        android:background="#CCFFFFFF"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_sensor_wifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/quicksand_semibold"
                android:gravity="center_vertical"
                android:paddingVertical="10dp"
                android:text="Conecte su sensor a una red wifi"
                android:textColor="@color/blue_400"
                android:textSize="23sp" />

            <ImageButton
                android:id="@+id/iv_toggle_wifi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:background="@color/transparent"
                android:src="@drawable/ic_wifi_off_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Redes disponibles"
                android:textSize="20sp"
                android:fontFamily="@font/quicksand_semibold"
                android:textColor="@color/blue_400" />

            <ImageView
                android:id="@+id/iv_question"
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:src="@drawable/question"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv_wifi"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:divider="@color/transparent"
                android:dividerHeight="10dp"
                android:paddingBottom="10dp" />

            <Button
                android:id="@+id/btn_search_wifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:text="Buscar redes"
                android:layout_gravity="bottom"
                android:theme="@style/Button.Custom"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>